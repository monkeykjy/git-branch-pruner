// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "type": "npm",
      "script": "watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc-watch",
        {
          "owner": "esbuild",
          "pattern": [
            {
              "regexp": "^âœ˜\\s+\\[(ERROR|WARNING)\\]\\s+(.*)$",
              "severity": 1,
              "message": 2
            },
            {
              "regexp": "^\\s+([^\\s].*):(\\d+):(\\d+):$",
              "file": 1,
              "line": 2,
              "column": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "\\[watch\\] build started",
            "endsPattern": "\\[watch\\] build finished"
          }
        }
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      }
    }
  ]
}
